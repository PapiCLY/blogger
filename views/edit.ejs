<%- include('partials/header.ejs') %>
<h1>Edit Blog Post</h1>

<!-- Form to edit the blog post -->
<form action="/edit/<%= index %>" method="POST">
    <label for="bloggerName">Blogger Name:</label>
    <input type="text" id="bloggerName" name="bloggerName" value="<%= post.bloggerName %>" required><br><br>

    <label for="postTitle">Post Title:</label>
    <input type="text" id="postTitle" name="postTitle" value="<%= post.postTitle %>" required><br><br>

    <label for="blogPost">Blog Post:</label>
    <textarea id="blogPost" name="blogPost" required><%= post.bloggerPost %></textarea><br><br>

    <button type="submit">Save Changes</button>
</form>
<%- include('partials/footer.ejs') %>